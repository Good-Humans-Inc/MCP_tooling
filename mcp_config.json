{
  "mcpServers": {
    "local-stdio-calculator": {
      "type": "stdio",
      "command": "python",
      "args": [
        "-m",
        "calculator"
      ]
    },
    "local-stdio-morning-call": {
      "type": "stdio",
      "command": "python",
      "args": [
        "-m",
        "goodmorning"
      ]
    },
    "remote-sse-server": {
      "type": "sse",
      "url": "https://api.example.com/sse",
      "disabled": true
    },
    "remote-http-server": {
      "type": "http",
      "url": "https://api.example.com/mcp",
      "disabled": true
    }
  }
}